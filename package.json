{
  "name": "platica",
  "private": true,
  "scripts": {
    "dev": "bun --filter '@platica/*' dev",
    "build": "bun run --cwd apps/server build && bun run --cwd apps/web build",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules",
    "db:setup": "bun run --cwd apps/server db:setup",
    "db:seed": "bun run --cwd apps/server db:seed"
  },
  "devDependencies": {
    "@types/bun": "^1.1.16",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.7.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "sharp"
  ],
  "module": "index.ts",
  "type": "module",
  "dependencies": {
    "hono": "^4.6.16"
  }
}