{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@db/*": ["./src/db/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@utils/*": ["./src/utils/*"],
      "@platica/shared/*": ["../../packages/shared/src/*"],
      "@models": ["../../packages/shared/src/models/index.ts"],
      "@models/*": ["../../packages/shared/src/models/*"],
      "@constants/*": ["../../packages/shared/src/constants/*"],
      "@websockets": ["../../packages/shared/src/websockets/index.ts"],
      "@types": ["../../packages/shared/src/types.ts"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src"]
}