{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@lib/*": ["./src/lib/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@platica/shared/*": ["../../packages/shared/src/*"],
      "@models/*": ["../../packages/shared/src/models/*"],
      "@constants/*": ["../../packages/shared/src/constants/*"],
      "@websocket/*": ["../../packages/shared/src/websocket/*"],
      "@types": ["../../packages/shared/src/types.ts"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src"]
}